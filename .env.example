# Family Finance API Gateway Environment Variables

# Ports
HTTP_PORT=80
HTTPS_PORT=443

# Rate Limiting
API_RATE_LIMIT=10r/s
AUTH_RATE_LIMIT=5r/s

# Upstream Services
AUTH_SERVICE_HOST=auth-service
AUTH_SERVICE_PORT=80

ACCOUNT_SERVICE_HOST=account-service
ACCOUNT_SERVICE_PORT=80

TRANSACTION_SERVICE_HOST=transaction-service
TRANSACTION_SERVICE_PORT=80

# CORS Settings (для продакшена измените на конкретные домены)
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,X-Requested-With,Content-Type,Accept,Authorization

# SSL Settings (для продакшена)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Logging
LOG_LEVEL=notice